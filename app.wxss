/* --- 通用弹窗规范 (Premium UI) --- */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-overlay.active {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 96%; /* 稍微加宽一点悬浮感更好 */
  max-width: 500px;
  background: rgba(28, 28, 30, 0.94);
  backdrop-filter: blur(25px) saturate(180%);
  border-radius: 32px; /* 统一四角圆角，实现悬浮卡片感 */
  padding: 0;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  transform: translateY(110%); /* 增加初始偏移量 */
  transition: transform 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
  border: 1px solid rgba(255, 255, 255, 0.08);
  margin-bottom: calc(20px + env(safe-area-inset-bottom)); /* 关键：悬浮偏移 */
}

.modal-overlay.active .modal-content {
  transform: translateY(0);
}

.modal-handle {
  width: 36px;
  height: 4px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 2px;
  margin: 12px auto 0;
  flex-shrink: 0;
}

.modal-header {
  padding: 24px 28px 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: none;
}

.modal-title {
  font-size: 22px;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 0.5px;
}

.modal-close-btn {
  width: 32px;
  height: 32px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.5);
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  /* padding: 0 12px 40px; */
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
}

.modal-body::-webkit-scrollbar {
  display: none;
}

.modal-footer {
  padding: 20px 28px;
  padding-bottom: calc(20px + constant(safe-area-inset-bottom));
  padding-bottom: calc(20px + env(safe-area-inset-bottom));
  background: linear-gradient(to top, rgba(28, 28, 30, 1), rgba(28, 28, 30, 0));
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}

/* 弹窗中的通用表单项 */
.premium-form-section {
  display: flex;
  flex-direction: column;
  gap: 12px;
  /* 移除 margin-bottom，间距由父容器的 gap 统一控制 */
}

.item-label {
  font-size: 11px;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.3);
  letter-spacing: 2px;
  text-transform: uppercase;
}

/* 复用 index.wxss 中成功的 class */
.container.modal-open {
  height: 100vh;
  overflow: hidden;
  position: fixed;
  width: 100%;
}
