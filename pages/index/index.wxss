/* pages/index/index.wxss */

.container {
  padding: 20px 16px 100px 16px;
  position: relative;
  padding-top: 60px;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 设置图标 */
.settings-icon {
  position: absolute;
  top: 20px;
  right: 20px;
  width: 24px;
  height: 24px;
  z-index: 10;
  opacity: 0.7;
}

.settings-icon .icon {
  width: 100%;
  height: 100%;
}

/* 年度目标卡片 - 毛玻璃效果 */
.goal-card {
  border-radius: 24px;
  padding: 24px;
  margin-bottom: 24px;
  margin-top: 0;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.18);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5), inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  position: relative;
  overflow: hidden;
}

.goal-card::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle at center, rgba(168, 85, 247, 0.25) 0%, transparent 70%);
  z-index: 0;
  pointer-events: none;
}

.goal-header, .goal-content {
  position: relative;
  z-index: 1;
}

.goal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.goal-label {
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 1px;
  color: rgba(255, 255, 255, 0.7);
}

.goal-progress-text {
  font-size: 11px;
  color: rgba(255, 255, 255, 0.7);
}

.goal-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goal-number {
  display: flex;
  align-items: baseline;
}

.current-count {
  font-size: 48px;
  font-weight: 700;
  color: #ffffff;
  line-height: 1;
}

.total-count {
  font-size: 20px;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.7);
  margin-left: 2px;
}

.progress-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8px;
}

.progress-percentage {
  font-size: 16px;
  font-weight: 600;
  color: #ffffff;
}

.progress-bar {
  width: 100px;
  height: 6px;
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 3px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #ffffff;
  border-radius: 4px;
  transition: width 0.3s ease;
}

/* 活动热力图 */
.heatmap-section {
  margin-bottom: 24px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px; /* 间距 b */
  padding: 0 4px;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

.section-subtitle {
  font-size: 10px;
  font-weight: 600;
  letter-spacing: 1px;
  color: var(--text-tertiary);
}

.heatmap-container {
  background-color: var(--bg-card);
  border-radius: 12px;
  padding: 16px;
}

.heatmap-grid {
  position: relative;
}

.week-labels {
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  gap: 3px;
  padding-top: 0;
}

.week-label {
  font-size: 10px;
  color: var(--text-secondary);
  height: 12px;
  line-height: 12px;
}

.heatmap-scroll {
  margin-left: 28px;
  margin-bottom: 4px;
  white-space: nowrap;
  max-width: calc(100vw - 80px);
}

.heatmap-content {
  display: inline-block;
}

.heatmap-row {
  display: flex;
  gap: 3px;
  margin-bottom: 3px;
}

.heatmap-cell {
  width: 12px;
  height: 12px;
  border-radius: 2px;
  transition: all 0.2s ease;
  border: 0.5px solid rgba(255, 255, 255, 0.03);
  box-sizing: border-box;
}

.heatmap-cell.level-0 {
  background-color: rgba(255, 255, 255, 0.06);
}

.heatmap-cell.level-1 {
  background-color: #5a2d7a;
  box-shadow: 0 0 4px rgba(90, 45, 122, 0.2);
}

.heatmap-cell.level-2 {
  background-color: #7d3fa0;
  box-shadow: 0 0 6px rgba(125, 63, 160, 0.3);
}

.heatmap-cell.level-3 {
  background-color: #a855f7;
  box-shadow: 0 0 8px rgba(168, 85, 247, 0.4);
}

.heatmap-cell.level-4 {
  background-color: #c084fc;
  box-shadow: 0 0 10px rgba(192, 132, 252, 0.5);
}

.month-labels {
  display: flex;
  position: relative;
  margin-left: 28px;
  margin-top: 4px;
  height: 12px;
}

.month-label {
  font-size: 10px;
  color: var(--text-secondary);
  position: absolute;
}

.heatmap-legend {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 5px;
  margin-top: 12px;
}

.legend-text {
  font-size: 10px;
  color: var(--text-secondary);
  text-transform: uppercase;
}

.legend-cells {
  display: flex;
  gap: 2px;
}

.legend-cell {
  width: 11px;
  height: 11px;
  border-radius: 2px;
}

.legend-cell.level-0 {
  background-color: #1e1e1e;
}

.legend-cell.level-1 {
  background-color: #5a2d7a;
}

.legend-cell.level-2 {
  background-color: #7d3fa0;
}

.legend-cell.level-3 {
  background-color: #a855f7;
}

.legend-cell.level-4 {
  background-color: #c084fc;
}

/* 最近记录 */
.recent-logs-section {
  margin-bottom: 24px;
}

.recent-logs-section .section-header {
  margin-bottom: 16px; /* 间距 a = 间距 b */
}

.recent-logs-section .section-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0; /* 使用 header 的 margin */
}

.logs-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.log-item {
  background-color: var(--bg-card);
  border-radius: 0;
  padding: 18px 16px; /* 增加内边距更高级 */
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 0.5px solid rgba(255, 255, 255, 0.05); /* 更细、更透的分割线 */
}

.log-item:first-child {
  border-radius: 12px 12px 0 0;
}

.log-item:last-child {
  border-radius: 0 0 12px 12px;
  border-bottom: none;
}

.log-item:only-child {
  border-radius: 12px;
}

.log-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.log-title {
  font-size: 15px;
  font-weight: 500;
  color: var(--text-primary);
}

.log-description {
  font-size: 12px;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 8px;
}

/* 强度显示区域 */
.log-intensity-section {
  display: flex;
  align-items: center;
  gap: 12px;
}

/* 强度进度条 */
.log-intensity-bar {
  width: 80px;
  height: 4px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 2px;
  overflow: hidden;
  position: relative;
}

.intensity-fill {
  height: 100%;
  border-radius: 2px;
  transition: width 0.5s ease;
}

.intensity-fill.level-1 { background-color: #5a2d7a; box-shadow: 0 0 6px rgba(90, 45, 122, 0.4); }
.intensity-fill.level-2 { background-color: #7d3fa0; box-shadow: 0 0 8px rgba(125, 63, 160, 0.5); }
.intensity-fill.level-3 { background-color: #a855f7; box-shadow: 0 0 10px rgba(168, 85, 247, 0.6); }
.intensity-fill.level-4 { background-color: #c084fc; box-shadow: 0 0 12px rgba(192, 132, 252, 0.7); }

.intensity-score {
  font-size: 14px;
  font-weight: 700;
  color: var(--accent-purple-light);
  min-width: 28px;
  text-align: right;
}

.log-date {
  font-size: 12px;
  color: var(--text-secondary);
  font-weight: 400;
}

.log-time {
  font-size: 13px;
  font-weight: 600;
  letter-spacing: 0.5px;
  color: var(--text-tertiary);
  text-transform: uppercase;
}

.empty-logs {
  padding: 40px 20px;
  text-align: center;
}

.empty-text {
  font-size: 14px;
  color: var(--text-secondary);
}

/* 计时器卡片 - 霓虹磨砂风格 */
.timer-card {
  position: fixed;
  bottom: 120px;
  left: 50%;
  transform: translateX(-50%);
  width: 300px;
  padding: 30px 20px;
  border-radius: 30px;
  text-align: center;
  z-index: 100;
  
  /* 磨砂玻璃背景 */
  background: rgba(10, 10, 10, 0.6);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  
  /* 边框与阴影 */
  border: 1px solid rgba(255, 255, 255, 0.08);
  box-shadow: 
    0 20px 50px rgba(0, 0, 0, 0.5),
    inset 0 0 0 1px rgba(255, 255, 255, 0.05);
    
  overflow: hidden;
}

/* 背景流动光晕 */
.timer-bg-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 150%;
  height: 150%;
  transform: translate(-50%, -50%);
  background: radial-gradient(circle at center, rgba(124, 58, 237, 0.15) 0%, transparent 60%);
  z-index: 0;
  animation: bg-pulse 4s infinite ease-in-out;
  pointer-events: none;
}

@keyframes bg-pulse {
  0%, 100% { opacity: 0.5; transform: translate(-50%, -50%) scale(0.9); }
  50% { opacity: 0.8; transform: translate(-50%, -50%) scale(1.1); }
}

.timer-header {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  margin-bottom: 8px;
}

.timer-label {
  font-size: 10px;
  font-weight: 700;
  letter-spacing: 2px;
  color: #a78bfa;
  text-transform: uppercase;
  text-shadow: 0 0 10px rgba(167, 139, 250, 0.4);
}

.timer-dot {
  width: 6px;
  height: 6px;
  background-color: #f0abfc; /* 荧光粉 */
  border-radius: 50%;
  box-shadow: 0 0 8px #f0abfc;
  animation: blink 1.5s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.4; transform: scale(0.8); }
}

.timer-display {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: baseline;
}

.timer-value {
  font-size: 52px;
  font-weight: 200; /* 极细字体显得更高级 */
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  font-feature-settings: "tnum";
  font-variant-numeric: tabular-nums;
  letter-spacing: 2px;
  text-shadow: 
    0 0 20px rgba(139, 92, 246, 0.6),
    0 0 40px rgba(139, 92, 246, 0.3);
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 40px;
  left: 50%;
  transform: translateX(-50%);
  width: 320px;
  height: 56px;
  display: flex;
  gap: 12px;
  z-index: 100;
  transition: all 0.3s ease;
}

.start-timer-btn {
  flex: 3;
  background: linear-gradient(135deg, #7c3aed, #4c1d95);
  border: none;
  border-radius: 28px; /* 统一圆角 */
  height: 56px; /* 统一高度 */
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  box-shadow: 0 10px 30px rgba(105, 39, 151, 0.4);
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.start-timer-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.start-timer-btn:active::before {
  left: 100%;
}

.start-timer-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4px 16px rgba(105, 39, 151, 0.3);
}

.start-timer-btn .btn-text {
  font-size: 16px;
  font-weight: 600;
  letter-spacing: 1.5px;
  color: #ffffff;
  position: relative;
  z-index: 1;
}

.add-log-btn-small {
  flex: 2;
  height: 56px; /* 统一高度 */
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 28px; /* 统一圆角 */
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
  transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(12px);
}

.add-log-btn-small::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.3s ease, height 0.3s ease;
}

.add-log-btn-small:active::before {
  width: 200%;
  height: 200%;
}

.add-log-btn-small:active {
  transform: none;
  box-shadow: 0 4px 16px rgba(105, 39, 151, 0.3);
}

.add-log-btn-small .btn-icon {
  font-size: 28px;
  font-weight: 300;
  color: #ffffff;
  position: relative;
  z-index: 1;
  transition: transform 0.3s ease;
}

.finish-btn {
  width: 100%;
  height: 56px;
  border-radius: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  box-shadow: 0 8px 24px rgba(105, 39, 151, 0.4);
}

.add-log-btn-small .btn-icon {
  font-size: 32px; /* 再次放大 */
  font-weight: 200; /* 细一点显得高级 */
  color: var(--accent-purple-light);
  position: relative;
  z-index: 1;
  transition: transform 0.3s ease;
}

.finish-btn {
  width: 100%;
  height: 56px;
  border-radius: 28px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  background: linear-gradient(135deg, #692797, #4a1d6b);
  box-shadow: 0 8px 24px rgba(74, 29, 107, 0.5);
}

.action-bar.timer-active {
  width: 280px;
}

