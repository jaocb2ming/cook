/* pages/settings/settings.wxss */

.container {
  padding: 20px 16px;
  min-height: 100vh;
}

/* 头部 */
.header {
  margin-bottom: 32px;
  position: relative;
}

.back-button {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24px;
}

.back-icon {
  width: 24px;
  height: 24px;
}

.page-title {
  font-size: 32px;
  font-weight: 800;
  letter-spacing: 3px;
  background: linear-gradient(135deg, #ffffff 0%, #d4a5f7 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-align: center;
  display: block;
}

.back-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  margin-bottom: 16px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 10px;
  transition: all 0.2s ease;
}

.back-button:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.06);
}

.back-icon {
  width: 20px;
  height: 20px;
}

